# Pollica Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# REQUIRED - Must be set before running
# ===========================================

# JWT Secret - REQUIRED
# Generate with: openssl rand -base64 32
# Must be at least 32 characters
JWT_SECRET=

# MySQL Root Password - REQUIRED
# Use a strong password for production
MYSQL_ROOT_PASSWORD=

# ===========================================
# Optional - Defaults shown
# ===========================================

# Server Configuration
NODE_ENV=production
FRONTEND_PORT=7011
BACKEND_PORT=7012
# Ports control both host mapping and container listening
# e.g. FRONTEND_PORT=7011 and BACKEND_PORT=7012 for production

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_NAME=pollica
DB_CONNECTION_LIMIT=50

# JWT Token Expiration
JWT_EXPIRES_IN=24h

# CORS Origin (frontend URL)
# Update this to match your frontend URL and port
CORS_ORIGIN=http://localhost:7011

# Frontend API URLs (baked in at build time)
# These should point to the frontend URL (nginx proxies to backend)
# For production behind a reverse proxy: https://yourdomain.com
VITE_API_URL=http://localhost:7011/api
VITE_SOCKET_URL=http://localhost:7011
